{
  "name": "gas_clasp_template",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": ">=24"
  },
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "init-serve": "clasp login --no-localhost",
    "clasp-env": "sh -c '. ./.env && echo \"{\\\"scriptId\\\":\\\"$SCRIPT_ID\\\",\\\"rootDir\\\":\\\"./src\\\"}\" > .clasp.json'",
    "clasp-env:staging": "cp .clasp-staging.json .clasp.json",
    "clasp-env:prod": "cp .clasp-prod.json .clasp.json",
    "env:copy": "cp .env.example .env",
    "push": "yarn clasp-env && clasp push",
    "push:staging": "yarn clasp-env:staging && clasp push",
    "push:prod": "yarn clasp-env:prod && clasp push",
    "pull": "yarn clasp-env && clasp pull",
    "pull:staging": "yarn clasp-env:staging && clasp pull",
    "pull:prod": "yarn clasp-env:prod && clasp pull",
    "open": "yarn clasp-env && clasp open",
    "open:staging": "yarn clasp-env:staging && clasp open",
    "open:prod": "yarn clasp-env:prod && clasp open",
    "deploy": "yarn clasp-env && sh script/deploy.sh",
    "deploy:staging": "yarn clasp-env:staging && sh script/deploy.sh",
    "deploy:prod": "yarn clasp-env:prod && sh script/deploy.sh",
    "lint": "eslint \"./src/**/*.{js,ts}\" --fix --max-warnings 65",
    "format": "prettier --write \"./src/**/*.{js,ts}\"",
    "prepare": "simple-git-hooks",
    "audit-fix": "npx yarn-audit-fix"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@types/google-apps-script": "^2.0.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-googleappsscript": "^1.0.5",
    "globals": "^17.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "yarn-audit-fix": "^10.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less,sass,scss}": [
      "stylelint --fix"
    ]
  }
}
